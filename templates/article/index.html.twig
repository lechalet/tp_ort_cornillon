{% extends 'base.html.twig' %}

{% block title %}Article index
{% endblock %}

{% block body %}
	<h1 class="mt-2" style="text-align:center;">Liste des articles</h1>
	{# Card #}
	{% for article in articles %}
		<div class="container d-flex">
			<div class="card mr-1 mt-2" style="width: 18rem;">
				<img src="{{ article.image }}" class="card-img-top" alt="{{ article.name }}">
				<div class="card-body">
					<h5 class="card-title">{{ article.name }}</h5>
					<p class="card-text">{{ article.description }}</p>
				</div>
			</div>
		</div>
	{% endfor %}
	<a href="{{ path('article_new') }}">Create new</a>
{% endblock %}
